#!/bin/sh

CURRENT_LOCATION=$(pwd -P)
BIN_DIRECTORY="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd -P)"
DOTFILES_DIRECTORY="$(cd "$(dirname "${BIN_DIRECTORY}")" && pwd -P)"

displayUsageAndExit() {
    echo "dot -- dotfiles management"
    echo ""
    echo "Usage: dot [options]"
    echo ""
    echo "Example usage:"
    echo "  update              Update dotfiles on system"
    echo "  help, -h, --help    Show this help message and exit"
    exit
}

while test $# -gt 0; do
    case "$1" in
        "help"|"-h"|"--help")
            displayUsageAndExit
            ;;

        "update")
            cd ${DOTFILES_DIRECTORY} && git pull origin master >/dev/null
            ${DOTFILES_DIRECTORY}/getpower.sh
            cd "${CURRENT_LOCATION}" || exit
            ;;
        *)
            echo "Invalid option: $1"
            displayUsageAndExit
            ;;
    esac
    shift
done

